{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "composite": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "incremental": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "noLib": false,
        "outDir": "./dist",
        "removeComments": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "typeRoots" : ["./node_modules/@types", "./typings"],
        "target": "esnext"
    },
    "include": [
        "src/**/*",
        "gulpfile.ts"
    ],
    "files": ["package.json"]
}
